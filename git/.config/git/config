[include]
    path = ~/.config/git/config.personal

[includeIf "gitdir/i:~/Documents/work/"]
    path = ~/.config/git/config.work

[init]
    defaultBranch = main
[pager]
    branch = false
[pull]
    rebase = true
[fetch]
    prune = true
[core]
    editor = nvim
    abbrev = 8
    pager = delta
[merge]
    tool = fugitive
    conflictStyle = zdiff3
[mergetool]
    keepBackup = false
[mergetool "fugitive"]
    cmd = nvim -f -c "Gvdiffsplit!" "$MERGED"
[alias]
    sw = switch
    br = branch
    ci = commit
    st = status
    r = rebase
    lg = log --graph --oneline
    unstage = reset HEAD --
    last = log -1 HEAD
    hide = update-index --skip-worktree
    unhide = update-index --no-skip-worktree
    clone-worktree = !git-clone-worktree
[gpg]
    format = ssh
[gpg "ssh"]
    program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
    gpgsign = true
[rerere]
    enabled = true
[branch]
    sort = -committerdate
[rebase]
    updateRefs = true
[push]
    autoSetupRemote = true
    recurseSubmodules = on-demand
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    line-numbers = true
    hunk-header-style = omit
[submodule]
    recurse = true
