[init]
    defaultBranch = main
[pager]
    branch = false
[pull]
    rebase = true
[fetch]
    prune = true
[core]
    editor = nvim
[merge]
    tool = fugitive
[mergetool]
    keepBackup = false
[mergetool "fugitive"]
    cmd = nvim -f -c "Gvdiffsplit!" "$MERGED"
[alias]
    sw = switch
    br = branch
    ci = commit
    st = status
    unstage = reset HEAD --
    last = log -1 HEAD
[gpg]
    format = ssh
[gpg "ssh"]
    program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
    gpgsign = true
[rerere]
	enabled = true
[column]
	ui = auto
